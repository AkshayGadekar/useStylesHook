{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["**/__tests__/*"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
